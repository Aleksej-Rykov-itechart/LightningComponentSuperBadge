<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId" controller="HelloWorldController">
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:attribute name="greeting" type="String" default="World" />
    <lightning:input name="Greeting" label="Greeting" value="{!v.greeting}"/>
	Hello, {!v.greeting}!
</aura:component>